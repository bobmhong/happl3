{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Module ps1",
      "type": "debugpy",
      "request": "launch",
      "module": "happl3",
      "args": ["${workspaceFolder}/test.ps1"]
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch Program test.sh",
      "program": "${workspaceFolder}/happl3.py",
      "args": ["${workspaceFolder}/test.sh"]
    },

    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    }
  ]
}
